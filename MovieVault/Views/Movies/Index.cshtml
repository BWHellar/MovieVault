

@using MovieVault.Models;

<h1>Movie Vault</h1>
<ul>

@if (Model.Count == 0)
{
  <p>You have no movies in your vault!</p>
}
@if(Model.Count != 0)
{
  @foreach (Movie movie in Model)
  {
    <li><a href='/movies/@movie.GetId()'>@movie.GetTitle()</a></li>
  }
}

</ul>
<a href="/movies/new">Add a new movie.</a>
<form action="/movies/delete" method="post">
  <button type="submit" name="button">Clear All Movies</button>
</form>
